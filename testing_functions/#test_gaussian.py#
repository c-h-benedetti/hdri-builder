

def testing():
    # Image test fake 
    img_sz = 7
    #img = np.arange(img_sz * img_sz).reshape(img_sz, img_sz)
    img = np.ones((img_sz, img_sz))
    img *= 2
    print(img)
    print("")

    # Filtre test fake
    filtre = np.ones((5, 5)) / (5 * 5)
    print(filtre)
    print("")

    # Settings
    shift = 2
    pad = 2

    output = conv.convolve(img, filtre, shift, pad)
    print(output)


def testing_2():
    img = ocv.imread("data/basketball1.png", 0)
    filtre = np.ones((5, 5)) / (5 * 5)
    shift = 2
    pad = 2

    output = conv.convolve(img, filtre, shift, pad)
    ocv.imwrite("basket_gauss.png", output)

def testing_3():
    img = ocv.imread("data/basketball1.png", 0)
    maps = conv.gaussian_pyramid_mono(img, 20, 10)
    conv.write_maps(maps, "g_map_raw")
    maps = conv.expend(maps)
    conv.write_maps(maps, "g_map_exp")

def testing_4():
    img = ocv.imread("data/basketball1.png", 0)
    img2 = ocv.imread("data/baboon.jpg", -1)
    maps1 = conv.gaussian_pyramid(img)
    maps2 = conv.gaussian_pyramid(img2)
    conv.write_maps(maps1, "g_map_bw")
    conv.write_maps(maps2, "g_map_rgb")
    pass